{
    "name": "yu2ry/notification-handler",
    "authors": [
        {
            "name": "Yury Borisov",
            "email": "yu2ry@rambler.ru"
        }
    ],
    "keywords": ["laravel", "notification"],
    "require": {
        "php": ">=7.2.0",
        "illuminate/support": "~5.6"
    },
    "autoload": {
        "psr-4": {
            "Notification\\Handler\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Notification\\Handler\\Tests\\": "tests"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "3.*",
        "orchestra/testbench": "3.6.*"
    },
    "scripts": {
        "lint": [
            "./vendor/bin/phpcs --report=summary --standard=PSR2 src/"
        ],
        "tests": [
            "./vendor/bin/phpunit -v  --colors=always --configuration phpunit.xml"
        ]
    }
}
